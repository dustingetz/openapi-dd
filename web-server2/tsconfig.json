{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    //    "allowJs": true,
//    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": ".",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "lib": [
    "es2017"
  ],
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}
